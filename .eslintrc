{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended"
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "coverage/",
    "build",
    "lib",
    "**spec**",
    "*.test.ts"
  ]
}